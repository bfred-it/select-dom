{
  "name": "select-dom",
  "version": "6.0.1",
  "description": "Extra lightweight DOM selector helper",
  "keywords": [
    "alternative",
    "css",
    "dom",
    "elements",
    "jquery",
    "querySelector",
    "querySelectorAll",
    "selector"
  ],
  "repository": "fregante/select-dom",
  "license": "MIT",
  "author": "Federico Brigante <opensource@bfred.it> (bfred.it)",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepack": "tsc --sourceMap false",
    "test": "tsc && tsd && xo && browserify -p esmify test.js | tape-run",
    "watch": "tsc --watch"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "rules": {
      "@typescript-eslint/prefer-for-of": "off",
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "valid-jsdoc": "off",
      "prefer-spread": "off",
      "prefer-arrow-callback": "off",
      "unicorn/no-for-loop": "off"
    }
  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "^0.7.0",
    "browserify": "^16.5.1",
    "esmify": "^2.1.1",
    "tape": "^5.0.0",
    "tape-run": "^7.0.0",
    "tsd": "^0.11.0",
    "typescript": "^3.8.3",
    "xo": "^0.30.0"
  }
}
